@model JW.Domain.Review

@{
    ViewBag.Title = "Delete Review";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Delete Review</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Review</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>Content</dt>
        <dd>@Html.DisplayFor(model => model.Content)</dd>
        <dt>Rating</dt>
        <dd>@Html.DisplayFor(model => model.Rating)</dd>
        <dt>Jewelry Item</dt>
        <dd>@Html.DisplayFor(model => model.JewelryItem.Name)</dd>
        <dt>Customer</dt>
        <dd>@Html.DisplayFor(model => model.Customer.Name)</dd>
    </dl>
    
    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()
        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-secondary" })
        </div>
    }
</div>