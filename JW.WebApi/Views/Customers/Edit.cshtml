@model JW.Domain.Customer

@{
ViewBag.Title = "Customer Form";
Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">@ViewBag.Title</h3>
                </div>
                <div class="card-body">
                    @using (Html.BeginForm())
                    {
                    <div class="form-group">
                        @Html.LabelFor(m => m.Name)
                        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Name, null, new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Username)
                        @Html.TextBoxFor(m => m.Username, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Username, null, new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Role)
                        @Html.TextBoxFor(m => m.Role, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Role, null, new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        @Html.Label("Password")
                        <input type="password" name="password" class="form-control" />
                        <span class="text-muted">Leave blank to keep current password.</span>
                    </div>
                    <div class="text-center">
                        <button type="submit" class="btn btn-primary">Save</button>
                        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary ml-2" })
                    </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Стили для формы -->
<style>
    body {
        background: #F4F7FD;
    }

    .card {
        border: 0;
        box-shadow: 0px 0px 10px 0px rgba(82, 63, 105, 0.1);
        background-color: #ffffff;
        border-radius: 8px;
    }

    .card .card-header {
        background: none;
        font-weight: 500;
        display: flex;
        align-items: center;
    }

    .card .card-body {
        padding: 20px;
    }

    .form-group {
        margin-bottom: 1rem;
    }

    .form-control {
        border: 1px solid #e6e4e9;
        border-radius: 8px;
        padding: 10px;
        font-size: 14px;
    }

    .btn-primary {
        background-color: #4e73e5;
        border: none;
        border-radius: 8px;
        padding: 10px 20px;
        color: #fff;
        font-size: 14px;
        cursor: pointer;
    }

    .btn-primary:hover {
        background-color: #374abe;
    }

    .btn-secondary {
        background-color: #6c757d;
        border: none;
        border-radius: 8px;
        padding: 10px 20px;
        color: #fff;
        font-size: 14px;
        cursor: pointer;
    }

    .btn-secondary:hover {
        background-color: #5a6268;
    }

    .text-center {
        text-align: center;
    }
</style>
